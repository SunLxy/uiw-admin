{
  "name": "uiw-admin",
  "version": "4.0.0",
  "private": true,
  "description": "UIW Admin Project",
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/uiw-admin.git"
  },
  "scripts": {
    "initi": "npm run clean && rm -rf node_modules && npm install && npm run bootstrap && npm run build",
    "prepare": "husky install",
    "-----layout-----": "----------",
    "build:layout:ui": "lerna exec --scope @uiw-admin/basic-layouts -- tsbb build",
    "watch:layout:ui": "lerna exec --scope @uiw-admin/basic-layouts -- tsbb watch",
    "build:layout:css": "lerna exec --scope @uiw-admin/basic-layouts -- compile-less -d src -o lib/esm",
    "watch:layout:css": "lerna exec --scope @uiw-admin/basic-layouts -- compile-less -d src -o lib/esm --watch",
    "watch:layout": "npm run watch:layout:ui & npm run watch:layout:css",
    "-----router-----": "----------",
    "build:router:ui": "lerna exec --scope @uiw-admin/router-control -- tsbb build",
    "watch:router:ui": "lerna exec --scope @uiw-admin/router-control -- tsbb watch",
    "build:router:css": "lerna exec --scope @uiw-admin/router-control -- compile-less -d src -o lib/esm",
    "watch:router:css": "lerna exec --scope @uiw-admin/router-control -- compile-less -d src -o lib/esm --watch",
    "watch:router": "npm run watch:router:ui & npm run watch:router:css",
    "//--------": "//--------",
    "bootstrap": "lerna bootstrap",
    "install:pkg": "lerna bootstrap --scope @uiw-admin/* --hoist",
    "bootstrap:webiste": "lerna bootstrap --scope @examples/base",
    "-----------": "--------------",
    "build:pk": "lerna exec --scope @uiw-admin/* -- tsbb build",
    "watch:pk": "lerna exec --scope @uiw-admin/* -- tsbb watch",
    "build:css": "lerna exec --scope @uiw-admin/* -- compile-less -d src -o lib/esm",
    "watch:css": "lerna exec --scope @uiw-admin/* -- compile-less -d src -o lib/esm --watch",
    "build": "npm run build:pk && npm run build:css",
    "build:website": "lerna exec --scope @examples/base -- npm run build",
    "watch:ui": "npm run watch:pk & npm run watch:css",
    "----------": "-------------",
    "version": "lerna version --exact --force-publish --no-push --no-git-tag-version",
    "publish": "npm run build && lerna publish from-package",
    "start": "lerna exec --scope @examples/base npm run start",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "clean": "lerna clean && npm run remove",
    "remove": "lerna exec --scope @uiw-admin/* --scope @example/*  --  rm -rf package-lock.json ",
    "tsbb": "tsbb",
    "lerna": "lerna"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "author": "jaywcjlove",
  "license": "MIT",
  "dependencies": {
    "compile-less-cli": "1.8.11",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "12.1.5",
    "prettier": "2.5.1",
    "tsbb": "3.5.4",
    "@kkt/less-modules": "7.0.4",
    "@kkt/react-library": "7.0.4",
    "@types/jest": "27.4.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-test-renderer": "17.0.1",
    "babel-plugin-import": "1.13.3",
    "jest-environment-jsdom": "27.4.6",
    "kkt": "7.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2"
  }
}